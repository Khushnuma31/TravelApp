@model IEnumerable<TravelApp.Models.Service>

@{
    ViewData["Title"] = "All Services";
}

<h2>All Services</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Service ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Icon Class</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Id</td>
                <td>@service.Title</td>
                <td>@service.Description</td>
                <td>@service.IconClass</td>
            </tr>
        }
    </tbody>
</table>
