@model TravelApp.Models.HomeViewModel

@{
    ViewData["Title"] = "About Us";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<!-- Navbar -->
<header class="navbar">
    <div class="navbar-container container">
        <a href="/" class="navbar-brand">
            <span>TRAVEL</span><span>WORLD</span>
        </a>
        <nav class="navbar-links">
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("About", "Home")">About</a>
            <a href="@Url.Action("Tours", "Home")">Tours</a>
            @if (User.IsInRole("Admin"))
            {
                <a href="/Admin">Admin Panel</a>
            }
        </nav>
        <div class="navbar-actions">
            @if (Context.Session.GetString("Username") != null)
            {
                <span class="navbar-text me-3" style="align-self: center; color: var(--heading-color);">
                    Hi, @Context.Session.GetString("Username")!
                </span>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary login">Logout</a>
            }
            else if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <span class="navbar-text me-3" style="align-self: center; color: var(--heading-color);">
                    Hi, @User.Identity.Name!
                </span>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary login">Logout</a>
            }
            else
            {
                <a href="/Account/Login" class="btn btn-secondary login">Login</a>
                <a href="/Account/Register" class="btn register">Register</a>
            }
        </div>
    </div>
</header>

<!-- Header Image -->
<section class="hero-section" style="position: relative;">
    <img src="/images/about.jpg" alt="About Us Header" style="width: 100%; height: 300px; object-fit: cover;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 36px; font-weight: bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">About Us</div>
</section>

<!-- About Content -->
<section class="about-section">
    <div class="container">
        <div class="section-header">
            <span class="section-subtitle">Our Story</span>
            <h2 class="section-title">Welcome to TravelWorld</h2>
        </div>
        <div class="about-content">
            <p>
                TravelWorld was founded in 2015 with a passion for exploring the world and creating unforgettable travel experiences.
                Our mission is to connect travelers with the best destinations, offering personalized tours, expert guides, and seamless travel planning.
            </p>
            <p>
                With over a decade of experience, we have successfully organized thousands of trips across continents, serving more than 10,000 happy customers.
                Our team of dedicated professionals is committed to providing top-notch service, ensuring every journey is safe, enjoyable, and memorable.
            </p>
        </div>

        <!-- Our Team -->
        <div class="section-header">
            <span class="section-subtitle">Meet the Team</span>
            <h2 class="section-title">Our Experts</h2>
        </div>
        <div class="team-grid">
            <div class="team-card">
                <img src="/images/ava-1.jpg" alt="Team Member 1">
                <h3>Om Bhut</h3>
                <p>CEO & Founder</p>
            </div>
            <div class="team-card">
                <img src="/images/ava-2.jpg" alt="Team Member 2">
                <h3>Khushnuma Padaya</h3>
                <p>Tour Director</p>
            </div>
            <div class="team-card">
                <img src="/images/ava-3.jpg" alt="Team Member 3">
                <h3>Harsh Barad</h3>
                <p>Customer Support</p>
            </div>
        </div>

        <!-- Our Services -->
        <div class="section-header">
            <span class="section-subtitle">What We Offer</span>
            <h2 class="section-title">Our Services</h2>
        </div>
        <div class="services-grid">
            <div class="service-card">
                <i class="fas fa-globe"></i>
                <h3>Custom Tours</h3>
                <p>Tailored travel experiences designed just for you.</p>
            </div>
            <div class="service-card">
                <i class="fas fa-hiking"></i>
                <p>Adventure Trips</p>
                <p>Exciting adventures in stunning landscapes.</p>
            </div>
            <div class="service-card">
                <i class="fas fa-plane"></i>
                <h3>Travel Planning</h3>
                <p>End-to-end planning for a hassle-free trip.</p>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter">
    <div class="newsletter-container container">
        <div class="newsletter-content">
            <h2>Subscribe now to get useful traveling information.</h2>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Obcaecati adipisci sunt in, provident facere ipsam?</p>
            <form class="newsletter-form" asp-action="Subscribe" method="post">
                <input type="email" name="email" placeholder="Enter your email" required>
                <button type="submit">Subscribe</button>
            </form>
        </div>
        <div class="newsletter-image">
            <img src="/images/male-tourist.png" alt="Tourist with camera">
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}